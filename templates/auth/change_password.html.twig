{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <h2>Change password</h2>
        <div class="card w-50">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row mb-3">
                    {{ form_label(form.oldPassword, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.oldPassword) }}
                        {{ form_errors(form.oldPassword) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.newPassword.first, null,{'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.newPassword.first) }}
                        {{ form_errors(form.newPassword.first) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.newPassword.second) }}
                        {{ form_errors(form.newPassword.second) }}
                    </div>
                </div>
                <div class="mt-3">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn-success'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
