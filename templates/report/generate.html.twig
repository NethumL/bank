{% extends 'base.html.twig' %}

{% block title %}Hello ReportController!{% endblock %}

{% block body %}
    <h2>Generate reports</h2>
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal" method="post">
                <div class="row">
                    <div class="row">
                        <div class="form-group mb-4">
                            <label for="loan_plan">Select Branch</label>
                            <select class="form-select" id="loan_plan" name="loan_plan" required>
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="form-group mb-4">
                            <label for="loan_duration">Report Type</label>
                            <select class="form-select" id="loan_duration" name="loan_duration" required>
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-4">
                        <button
                                class="btn btn-success btn-block waves-effect waves-light"
                                type="submit"
                                name="btn_submit"
                        >
                            Submit
                        </button>
                        <button
                                class="btn btn-danger btn-block waves-effect waves-light"
                                type="submit"
                                name="btn_submit"
                        >
                            Cancel
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
{% endblock %}
