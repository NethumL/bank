{% extends 'base.html.twig' %}

{% block title %}Transfer Funds{% endblock %}

{% block body %}
    <h2>Transfer History</h2>
    <div class="card">
        <div class="card-body">
            <div class="row align-items-start">
                <div class="col">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>From</th>
                            <th>To</th>
                            <th>Amount</th>
                            <th>Time</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for transfer in transfers %}
                            <tr>
                                <td>{{ transfer['From'] }}</td>
                                <td>{{ transfer['To'] }}</td>
                                <td>Rs. {{ transfer['Amount'] }}</td>
                                <td>{{ transfer['Created_Time'] }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
