{% extends 'base.html.twig' %}

{% block title %}Hello TransferController!{% endblock %}

{% block body %}
<div class="row justify-content-md-center">
    <h2>Transfer Funds</h2>
    <div class="card w-50">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="row">
                        {{ form_errors(form) }}
                        <div class="form-group mb-4">
                            {{ form_label(form.from, 'From Account') }}
                            {{ form_errors(form.from) }}
                            {{ form_widget(form.from) }}
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.to, 'Beneficiary Account Number') }}
                            {{ form_errors(form.to) }}
                            {{ form_widget(form.to) }}
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.amount) }}
                            {{ form_errors(form.amount) }}
                            {{ form_widget(form.amount) }}
                        </div>
                        <div class="form-group mb-4">
                            {{ form_label(form.description) }}
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description) }}
                        </div>
                    </div>
                    <div class="mt-3">
                        {{ form_widget(form.transfer, {'attr': {'class': 'btn-success'}}) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
