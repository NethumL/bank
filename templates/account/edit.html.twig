{% extends 'base.html.twig' %}

{% block title %}Edit user details{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <h2>Edit user details</h2>
        <div class="card w-50">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row mb-3">
                    {{ form_errors(form) }}
                    {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.phoneNumber, null,{'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_errors(form.phoneNumber) }}
                        {{ form_widget(form.phoneNumber) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.dob, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_errors(form.dob) }}
                        {{ form_widget(form.dob) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.address, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_errors(form.address) }}
                        {{ form_widget(form.address) }}
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success">Update</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
