{% extends 'base.html.twig' %}

{% block title %}Create new account{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <h2>Create New Account</h2>
        <div class="card w-50">
            <div class="card-body">
                {% for message in app.flashes('new-account-number') %}
                    {{ message }}
                {% endfor %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row mb-3">
                    {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.username) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.accountType, null,{'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.accountType) }}
                        {{ form_errors(form.accountType) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.savingsPlan, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.savingsPlan) }}
                        {{ form_errors(form.savingsPlan) }}
                    </div>
                </div>
                <div class="row mb-3">
                    {{ form_label(form.amount, null, {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.amount) }}
                        {{ form_errors(form.amount) }}
                    </div>
                </div>
                <div class="mt-3">
                    {{ form_widget(form.create, {'attr': {'class': 'btn-success'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
