{% extends 'base.html.twig' %}

{% block title %}Branch details{% endblock %}

{% block body %}
    <h2>Branch details</h2>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ branch['ID'] }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ branch['Address'] }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ branch['Name'] }}</td>
        </tr>
        <tr>
            <th>Manager</th>
            <td data-id="{{ branch['Manager_ID'] }}">{{ branch['Manager_Name'] }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_branch_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_branch_edit', {'id': branch['ID']}) }}">edit</a>

    <div class="mt-4">
        {{ include('branch/_delete_form.html.twig') }}
    </div>
{% endblock %}
