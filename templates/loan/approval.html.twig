{% block title %}Hello LoanController!{% endblock %}

{% block body %}
<h2>Loan Approve Form</h2>
    <div class="card">
        <div class="card-body">
        <div class="row align-items-start">
            <div class="col">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Loan Id</th>
                            <th>Name</th>
                            <th>Account Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr onclick="window.location='#';">
                            <td>1234</td>
