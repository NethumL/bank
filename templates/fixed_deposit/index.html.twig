{% extends 'base.html.twig' %}

{% block title %}Hello FixedDepositController!{% endblock %}

{% block body %}
<div class="row justify-content-md-center">
    <h2>Start a Fixed Deposit</h2>
    <div class="card w-50">
        <div class="card-body">
            <form class="needs-validation" method="post">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="loan_plan">Type</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="loan_plan" name="loan_plan" required>
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="agree">
                    <label class="form-check-label" for="agree">
                        Agree to Terms and Conditions
                    </label>
                </div>
                <div class="mt-4">
                    <button
                            class="btn btn-success btn-block waves-effect waves-light"
                            type="submit"
                            name="btn_submit"
                    >
                        Submit
                    </button>
                    <button
                            class="btn btn-danger btn-block waves-effect waves-light"
                            type="submit"
                            name="btn_submit"
                    >
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
